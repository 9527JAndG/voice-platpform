{
  "info": {
    "name": "OAuth2 认证流程测试",
    "description": "测试 OAuth2 授权流程的完整集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "client_id",
      "value": "alexa_client",
      "type": "string"
    },
    {
      "key": "client_secret",
      "value": "alexa_secret",
      "type": "string"
    },
    {
      "key": "redirect_uri",
      "value": "http://localhost:8080/callback",
      "type": "string"
    },
    {
      "key": "authorization_code",
      "value": "",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. 授权码模式",
      "item": [
        {
          "name": "1.1 获取授权页面",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/oauth2/authorize?response_type=code&client_id={{client_id}}&redirect_uri={{redirect_uri}}&scope=read write&state=test123",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "authorize"],
              "query": [
                {
                  "key": "response_type",
                  "value": "code"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}"
                },
                {
                  "key": "redirect_uri",
                  "value": "{{redirect_uri}}"
                },
                {
                  "key": "scope",
                  "value": "read write"
                },
                {
                  "key": "state",
                  "value": "test123"
                }
              ]
            },
            "description": "获取授权页面，需要在浏览器中完成登录和授权"
          },
          "response": []
        },
        {
          "name": "1.2 交换 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    pm.collectionVariables.set(\"refresh_token\", jsonData.refresh_token);",
                  "    console.log(\"Access Token: \" + jsonData.access_token);",
                  "    console.log(\"Refresh Token: \" + jsonData.refresh_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "authorization_code",
                  "type": "text"
                },
                {
                  "key": "code",
                  "value": "{{authorization_code}}",
                  "type": "text",
                  "description": "从授权页面获取的授权码"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{client_secret}}",
                  "type": "text"
                },
                {
                  "key": "redirect_uri",
                  "value": "{{redirect_uri}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/oauth2/token",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "token"]
            },
            "description": "使用授权码交换访问令牌"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. 刷新令牌",
      "item": [
        {
          "name": "2.1 刷新 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    console.log(\"New Access Token: \" + jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "refresh_token",
                  "type": "text"
                },
                {
                  "key": "refresh_token",
                  "value": "{{refresh_token}}",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{client_secret}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/oauth2/token",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "token"]
            },
            "description": "使用刷新令牌获取新的访问令牌"
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. 客户端凭证模式",
      "item": [
        {
          "name": "3.1 获取 Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    console.log(\"Access Token: \" + jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "grant_type",
                  "value": "client_credentials",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{client_secret}}",
                  "type": "text"
                },
                {
                  "key": "scope",
                  "value": "read write",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/oauth2/token",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "token"]
            },
            "description": "使用客户端凭证获取访问令牌"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Token 管理",
      "item": [
        {
          "name": "4.1 验证 Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{client_secret}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/oauth2/introspect",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "introspect"]
            },
            "description": "验证访问令牌是否有效"
          },
          "response": []
        },
        {
          "name": "4.2 撤销 Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "text"
                },
                {
                  "key": "client_id",
                  "value": "{{client_id}}",
                  "type": "text"
                },
                {
                  "key": "client_secret",
                  "value": "{{client_secret}}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/oauth2/revoke",
              "host": ["{{base_url}}"],
              "path": ["oauth2", "revoke"]
            },
            "description": "撤销访问令牌"
          },
          "response": []
        }
      ]
    },
    {
      "name": "5. OIDC 发现",
      "item": [
        {
          "name": "5.1 获取 OIDC 配置",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/.well-known/openid-configuration",
              "host": ["{{base_url}}"],
              "path": [".well-known", "openid-configuration"]
            },
            "description": "获取 OIDC 发现端点配置"
          },
          "response": []
        }
      ]
    },
    {
      "name": "6. 使用 Token 调用 API",
      "item": [
        {
          "name": "6.1 Alexa 设备发现",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"directive\": {\n    \"header\": {\n      \"namespace\": \"Alexa.Discovery\",\n      \"name\": \"Discover\",\n      \"payloadVersion\": \"3\",\n      \"messageId\": \"test-message-id\"\n    },\n    \"payload\": {\n      \"scope\": {\n        \"type\": \"BearerToken\",\n        \"token\": \"{{access_token}}\"\n      }\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/alexa/v3/directives",
              "host": ["{{base_url}}"],
              "path": ["alexa", "v3", "directives"]
            },
            "description": "使用访问令牌调用 Alexa 设备发现 API"
          },
          "response": []
        },
        {
          "name": "6.2 Google 设备同步",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"requestId\": \"test-request-id\",\n  \"inputs\": [\n    {\n      \"intent\": \"action.devices.SYNC\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/google/fulfillment",
              "host": ["{{base_url}}"],
              "path": ["google", "fulfillment"]
            },
            "description": "使用访问令牌调用 Google 设备同步 API"
          },
          "response": []
        }
      ]
    }
  ]
}
