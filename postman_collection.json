              "raw": "{\n  \"header\": {\n    \"namespace\": \"AliGenie.Iot.Device.Query\",\n    \"name\": \"QueryRequest\",\n    \"messageId\": \"{{$randomUUID}}\",\n    \"payloadVersion\": \"1\"\n  },\n  \"payload\": {\n    \"deviceId\": \"robot_001\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/smarthome/query",
              "host": ["{{base_url}}"],
              "path": ["smarthome", "query"]
            }
          }
        }
      ]
    },
