              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"header\": {\n    \"namespace\": \"AliGenie.Iot.Device.Discovery\",\n    \"name\": \"DiscoveryRequest\",\n    \"messageId\": \"{{$randomUUID}}\",\n    \"payloadVersion\": \"1\"\n  },\n  \"payload\": {}\n}"
            },
            "url": {
              "raw": "{{base_url}}/smarthome/discovery",
              "host": ["{{base_url}}"],
              "path": ["smarthome", "discovery"]
            }
          }
        },
